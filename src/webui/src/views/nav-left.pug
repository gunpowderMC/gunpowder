.col-md-3.left_col
    .left_col.scroll-view
        .navbar.nav_title(style='border: 0;')
            a.site_title(href='/')
                span Gunpowder
        .clearfix
        // sidebar menu
        #sidebar-menu.main_menu_side.hidden-print.main_menu
            .menu_section
                ul.nav.side-menu
                    li
                        a(href='/')
                            i.fa.fa-home
                            | Home
                    if hasPerm('console')
                        li
                            a(href='/console')
                                i.fa.fa-desktop
                                | Console
                    if hasPerm('cron')
                        li
                            a(href='/cron')
                                i.fa.fa-calendar
                                | Cron
                    if hasPerm('user-admin')
                        li
                            a(href='/users')
                                i.fa.fa-user
                                | Players
        .sidebar-footer.hidden-small
            a(data-toggle='tooltip' data-placement='top' title='Settings' style='width: 50%' href='/settings')
                span.glyphicon.glyphicon-cog(aria-hidden='true')
            a(data-toggle='tooltip' data-placement='top' title='Logout' style='width: 50%' href='/logout')
                span.glyphicon.glyphicon-off(aria-hidden='true')
        // /menu footer buttons